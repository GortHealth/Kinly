<h1>Edit "<%= @channel.name %>"</h1>

<%= form_for @channel do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.radio_button :active, true %>
  <%= f.label 'Deploy Channel' %>
  <%= f.radio_button :active, false %>
  <%= f.label 'Take Channel Offline' %>

  <%= f.submit %>

<% end %>

<% @photos.each do |photo| %>
  <p>
    <%= (ChannelsPhoto.find_by photo_id: photo.id).order %> <%= image_tag photo.thumbnail_url %>
  </p>
<% end %>

<h1>Add Album to Channel</h1>
<%= render 'addphotos', collection: @albums %>
